---
import SideBar from "../components/SideBar.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900 flex h-screen">
    <SideBar />
    <slot />
  </body>
</html>

<!-- typekit -->
<script is:inline src="https://use.typekit.net/qgo6zhu.js"></script>
<script is:inline >try{Typekit.load({ async: true });}catch(e){}</script>
