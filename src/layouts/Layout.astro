---
import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/josefin-sans";

import MetaData from "../components/MetaData.astro";
import SideBar from "../components/SideBar.astro";
import SnakeBackground from "../components/SnakeBackground/index.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props satisfies Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <MetaData title={title} />

    <ViewTransitions />
  </head>
  <body class="bg-grey flex h-screen text-green-200 font-normal">
    <SnakeBackground />
    <SideBar />

    <main class="p-16 overflow-y-auto flex-1">
      <slot />
    </main>
  </body>
</html>
