---
import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/josefin-sans";

import MetaData from "../components/MetaData.astro";
import NavBar from "../components/NavBar.astro";
import SnakeBackground from "../components/SnakeBackground/index.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props satisfies Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <MetaData title={title} />

    <ViewTransitions />
  </head>
  <body
    class="bg-grey flex flex-col md:flex-row h-screen text-green-200 font-normal"
  >
    <SnakeBackground />
    <NavBar />

    <main class="p-4 md:p-16 overflow-y-auto flex-1">
      <slot />
    </main>
  </body>
</html>
