---
import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/josefin-sans";

import SideBar from "../components/SideBar.astro";
import SnakeBackground from "../components/SnakeBackground/index.astro";

export interface Props {
  title: string;
}

const year = new Date().getFullYear();

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-green-700 flex h-screen text-green-200 font-normal">
    <SnakeBackground />
    <SideBar />

    <main class="p-16 overflow-y-auto flex-1 bg-black/50">
      <slot />

      <footer class="absolute bottom-0 right-4 p-4 text-green-400 -z-10">
        <span>&copy; {year} Jon Richards</span>
      </footer>
    </main>
  </body>
</html>
