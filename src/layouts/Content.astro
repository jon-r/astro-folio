---
import type { MarkdownLayoutProps } from "astro";

import Layout from "./Layout.astro";

type Props = MarkdownLayoutProps<{
  title: string;
  linkText?: string;
  linkPath: string;
}>;

const { frontmatter } = Astro.props satisfies Props;
---
<Layout title={`Jon Richards - ${frontmatter.title}`}>
    <section class="max-w-4xl mx-auto">
      <header class="bg-green-500 text-green-200 p-8 rounded-t-md border-b-8 border-current">
        <h1 class="text-5xl font-bold">{frontmatter.title}</h1>
        {frontmatter.linkText && (
            <a class="hover:text-green-300 hover:underline text-xl" href={frontmatter.linkPath} download >
              {frontmatter.linkText}
            </a>
        )}
      </header>
      <div class="content bg-green-100 text-green-700 p-8 rounded-b-md">
        <slot/>
      </div>
    </section>
</Layout>

<style>
  .content {
    :global(h2,h3,strong) {
      @apply font-bold;
    }

    :global(h2,h3) {
      @apply text-2xl mb-3;
    }

    :global(h2) {
      @apply border-b-2 border-green-300
    }

    :global(h3) {
      @apply text-green-400;
    }

    :global(hr) {
      @apply border-current
    }

    :global(h4) {
      @apply text-green-400 text-xl mb-2;
    }

    :global(ul) {
      @apply list-disc list-inside
    }

    :global(p,ul,table) {
      @apply mb-4;
    }

    :global(table,thead,tr) {
      @apply w-full
    }

    :global(tr) {
      @apply flex justify-evenly
    }

    :global(th) {
      @apply flex-1;
    }

    :global(a) {
      @apply text-green-400 hover:text-green-300 hover:underline
    }
  }
</style>
