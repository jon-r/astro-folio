<canvas id="snakes" class="full-screen"></canvas>

<style>
  .full-screen {
    position: fixed;
    inset: 0;
  }
</style>

<script>
  import { gridOptions } from "./GridOptions";

  window.addEventListener("load", async () => {
    const htmlElement = document.getElementById("snakes");

    const { Grid } = await import("./Grid.js");

    if (htmlElement instanceof HTMLCanvasElement) {
      new Grid(htmlElement, gridOptions).init();
    }

    // todo pause button. maybe render it with the init()???
  });
</script>
