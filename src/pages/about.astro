---
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";

const cvFullUrl = `${import.meta.env.PUBLIC_STATIC_ASSETS_URL}cv/index.html`;
---

<Layout title="Jon Richards - About Me">
  <section
    class="relative max-w-4xl mx-auto shadow-md rounded-md border-l-8 border-green-400"
    transition:name="page"
  >
    <header
      class="bg-green-600/75 p-4 md:p-8 rounded-tr-md"
      transition:name="header"
    >
      <h1
        class="font-display text-5xl font-bold text-green-300"
        transition:name="title"
      >
        About Me
      </h1>

      <hr class="w-48 mt-2 block border-b-2 border-green-300" />

      <p class="text-xl">
        Download CV
        <a
          class="text-green-200 hover:text-green-300 hover:underline"
          href="/JonR-CV_Aug24.pdf"
          download
        >
          (pdf)
        </a>
        |

        <a
          class="text-green-200 hover:text-green-300 hover:underline text-xl"
          href={cvFullUrl}
        >(html)</a>
      </p>
    </header>
    <article
      class="mb-12 md:mb-0 relative h-[58cm] overflow-y-hidden bg-white text-green-700 rounded-br-md"
    >
      <iframe id="container" src={cvFullUrl} class="w-full h-full m-0"></iframe>
    </article>
  </section>
  <Footer />
</Layout>
